def sum_num():
    s = 0
    while True:
        err = False
        in_list = input("Введите число, для выхода нажмите 'l': ").split()
        for num in in_list:
            if num.lower() == "l":
                return s
            else:
                try:
                    s += int(num)
                except ValueError:
                    err = True
        if err:
            print("Данные неверны")
        print(f"Сумма чисел = {s}")

print(sum_num())
