my_list = [9, 8, 8, 7, 5, 5, 2, 1]
new_number = ""
while new_number != "h":
    i = 0
    new_number = input("Добавлен новый элемент.\nВыход - h\n")
    if new_number.isdigit():
         for n in my_list:
            if int(new_number) <= n:
               i += 1
            else:
                break
         my_list.insert(i, int(new_number))
    print(my_list)
